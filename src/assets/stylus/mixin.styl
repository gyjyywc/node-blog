// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 清除浮动
clear-float()
  &:after
    display: block
    height: 0
    overflow: hidden
    clear: both
    content: ''

// 媒体查询
base_width = 300px
$pc = "screen and (min-width: " + 3 * base_width + ")"
$tablet = "screen and (min-width: " + 2 * base_width + ") and (max-width: " + (3 * base_width - 1) + ")"
$phone = "screen and (max-width: " + (2 * base_width - 1) + ")"
