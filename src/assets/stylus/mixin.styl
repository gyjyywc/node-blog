// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 清除浮动
clear-float()
  &:after
    display: block
    height: 0
    overflow: hidden
    clear: both
    content: ''

// 媒体查询
pc_width = 1366px
tablet_width = 1024px
phone_width = 425px
$pc = "screen and (min-width: " + pc_width + ")"
$tablet = "screen and (min-width: " + (phone_width + 1) + ") and (max-width: " + tablet_width + ")"
$phone = "screen and (max-width: " + phone_width + ")"
