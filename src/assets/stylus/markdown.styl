.markdown-content
  h1, h2, h3, h4, h5, h6
    font-weight: bold
    margin: 5px 0 10px
  h1
    font-size: 28px
  h2
    font-size: 24px
  h3
    font-size: 20px
  h4
    font-size: 18px

  ol, ul
    padding-left: 2em
    list-style: disc

  strong
    font-weight: bold

  p
    margin-bottom: 10px

  pre
    margin-bottom: 10px

  blockquote, q
    quotes: none

  blockquote:before, blockquote:after,
  q:before, q:after
    content: ''
    content: none

  table
    border-collapse: collapse
    border-spacing: 0
